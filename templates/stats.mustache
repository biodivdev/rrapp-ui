
{{#stats}}

<section class="stats pure-u-1">
  <h3 class='pure-u-1'>{{strings.statistics}}</h3>

  <p>{{strings.containing}}
    <strong>{{taxa_count}}</strong> {{strings.names-from}}
    <strong>{{accepted_count}}</strong> {{strings.accepted-names-with}}
    <!--
    <strong>{{analysis_count}}</strong> {{strings.analysis-of}}
    -->
    <strong>{{occurrence_count}}</strong> {{strings.occurrences}}.
  </p>
  <p>{{strings.analysis-from}} <strong>{{last_updated}}</strong>.</p>

  <p>{{strings.stats-info}}</p>

  <div class="pure-u-1 cats">
    <h4>{{strings.risk-categories}}</h4>
    <canvas class='pure-u-1-2'></canvas><div class="pure-u-1-2">
      <p>{{strings.risk-categories-desc}}</p>
      <table class="pure-table">
        {{#stats.categories}}
        <tr>
          <th>
            <a href='{{base}}/search?query=risk-assessment.category:"{{label}}"'>{{label}}</a>
          </th>
          <td>{{value}}</td>
        </tr>
        {{/stats.categories}}
      </table>
    </div>
  </div>

  <div class="pure-u-1 occs_points">
    <h4>{{strings.occurrences-and-points}}</h4>
    <canvas class='pure-u-1-2'></canvas><div class="pure-u-1-2">
      <p>{{strings.occurrences-and-points-desc}}</p>
      <table class='pure-table'>
        <tbody>
          <tr>
            <th>
                {{strings.occurrences}}
            </th>
            <td>{{stats.occs_count}}</td>
          </tr>
          <tr>
            <th>
              <a href='{{base}}/search?query=points.count:0'>
                {{strings.not-points}}
              </a>
            </th>
            <td>{{stats.not_points_count}}</td>
          </tr>
          <tr>
            <th>
              <a href='{{base}}/search?query=points.count:>0'>
                {{strings.points}}
              </a>
            </th>
            <td>{{stats.points_count}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="pure-u-1 occs_ranges">
    <h4>{{strings.number-of-occs-by-spp}}</h4>
    <canvas class='pure-u-1-2'></canvas><div class="pure-u-1-2">
      <p>{{strings.number-of-occs-by-spp-desc}}</p>
      <table class="pure-table">
        <tbody>
          {{#stats.occs_ranges}}
          <tr>
            <th>
              <a href='{{base}}/search?query=occurrences.count:{{q}}'>{{label}}</a>
            </th>
            <td>{{value}}</td>
          </tr>
          {{/stats.occs_ranges}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="pure-u-1 points_ranges">
    <h4>{{strings.number-of-points-by-spp}}</h4>
    <canvas class='pure-u-1-2'></canvas><div class="pure-u-1-2">
      <p>{{strings.number-of-points-by-spp-desc}}</p>
      <table class="pure-table">
        <tbody>
          {{#stats.points_ranges}}
          <tr>
            <th>
              <a href='{{base}}/search?query=points.count:{{q}}'>{{label}}</a>
            </th>
            <td>{{value}}</td>
          </tr>
          {{/stats.points_ranges}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="pure-u-1 clusters_ranges">
    <h4>{{strings.number-of-clusters-by-spp}}</h4>
    <canvas class='pure-u-1-2'></canvas><div class="pure-u-1-2">
      <p>{{strings.number-of-clusters-by-spp-desc}}</p>
      <table class="pure-table">
        <tbody>
          {{#stats.clusters_ranges}}
          <tr>
            <th>
              <a href='{{base}}/search?query=_type:"clusters" AND count:{{q}}'>{{label}}</a>
            </th>
            <td>{{value}}</td>
          </tr>
          {{/stats.clusters_ranges}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="pure-u-1 eoo_ranges">
    <h4>{{strings.eoo}}</h4>
    <canvas class='pure-u-1-2'></canvas><div class="pure-u-1-2">
      <p>{{strings.eoo-desc}}</p>
      <table class="pure-table">
        <tbody>
          {{#stats.eoo_ranges}}
          <tr>
            <th>
              <a href='{{base}}/search?query=_type:"eoo" AND area:{{q}}'>{{label}}</a>
            </th>
            <td>{{value}}</td>
          </tr>
          {{/stats.eoo_ranges}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="pure-u-1 aoo_ranges">
    <h4>{{strings.aoo}}</h4>
    <canvas class='pure-u-1-2'></canvas><div class="pure-u-1-2">
      <p>{{strings.aoo-desc}}</p>
      <table class="pure-table">
        <tbody>
          {{#stats.aoo_ranges}}
          <tr>
            <th>
              <a href='{{base}}/search?query=_type:"aoo" AND area:{{q}}'>{{label}}</a>
            </th>
            <td>{{value}}</td>
          </tr>
          {{/stats.aoo_ranges}}
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js" type="text/javascript"></script>
  <script src="{{base}}/stats.js" type="text/javascript"></script>
  <script type="text/javascript">
    var base = "{{base}}";
    var stats = {{{json}}};
    window.onload = run_stats;
  </script>
</section>

{{/stats}}
